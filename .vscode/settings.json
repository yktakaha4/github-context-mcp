{
  "mcp": {
    "inputs": [
      {
        "type": "promptString",
        "description": "Enter your GitHub token",
        "default": "",
        "id": "token",
        "password": true
      },
    ],
    "servers": {
      "github-context-mcp": {
        "command": "${workspaceFolder}/bin/github-context-mcp",
        "args": [],
        "env": {
          "GITHUB_TOKEN": "${input:token}",
        }
      }
    }
  }
}
